<div class="dashboard">
    <div class='md-8'>
        <h2>Welcome to your dashboard!</h2>
    </div>

    {{#if posts.length}}
    <div class="col-md-4">
        <h3>All posts</h3>



        {{#each posts as |post|}}
        <div class="row mb-6">
            <div class="col-md-6">
                <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
            </div>
            <div class="col-md-6">
                <button class="btn btn-sm btn-danger" data-id="{{post.id}}">click to delete!</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>