<div class="posts">
    <article class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>
                <a href="/post/{{post.id}}">{{post.title}}</a>
            </h2>
            <div>
                Posted by {{post.user.username}} on {{format_date createdAt}}
            </div>
        </div>
        <div class="card-body">
            {{body}}
        </div>
    </article>
</div>
{{if(post.Comments)}}
<article class="card">
    <div class="card-header flex-row justify-space-between">
        <h2>
            Comments
        </h2>
        <div class="card-body">
            {{#each post.Comments}}
            <div>
                {{body}}

                </div{{#if post.Comments}} <section class="card">
                <div class="card-header">
                    <h3>Comments</h3>
                </div>

                <div class="card-body">
                    {{#each post.Comments}}
                    <div>
                        <p>
                            {{body}}
                        </p>
                        <p>
                            &mdash; {{User.username}}, {{format_date createdAt}}
                        </p>
                    </div>
                    {{/each}}
                </div>
                </section>
                {{/if}}
            </div>

        </div>
    </div>